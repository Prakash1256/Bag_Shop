<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <%- include('./partials/header') %>
    
    <div class="w-full h-screen flex flex-col lg:flex-row items-start justify-start px-4 lg:px-20 py-10 gap-10">
        
        <!-- Product Details Section -->
        <% user.cart.forEach((item) => { %>
        <div class="w-full lg:w-[30%] rounded-md overflow-hidden shadow-lg bg-white">
            <!-- Apply inline style for background color -->
            <div class="w-full h-80 flex justify-center items-center" style="background-color: <%= item.bgcolor %>;">
                <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
            </div>
            <div class="w-full flex justify-between px-5 py-4" style="background-color: <%= item.panelcolor %>;">
                <h3 class="text-2xl font-bold"><%= item.name %></h3>
                <div class="flex items-center gap-2">
                    <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow hover:bg-gray-200">
                        <i class="ri-add-line"></i>
                    </button>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow hover:bg-gray-200">
                        <i class="ri-subtract-line"></i>
                    </button>
                </div>
            </div>
            <div class="flex text-white justify-between px-5 py-3 border-t border-gray-200" style="background-color: <%= item.textcolor %>;">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg font-semibold">₹ <%= item.price %></h2>
            </div>
        </div>
        <% }) %>

        <!-- Price Breakdown Section -->
        <div class="w-full lg:w-[70%] bg-white rounded-md shadow-lg p-5">
            <h3 class="text-xl font-semibold">Price Breakdown</h3>
            <div class="px-5 mt-5">
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4 class="font-semibold">₹ <%= user.cart.reduce((acc, item) => acc + item.price, 0) %></h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4 class="font-semibold">₹ 0</h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4 class="font-semibold">₹ 20</h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4 class="font-semibold">FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-gray-300 my-5"></div>
            <div class="flex justify-between mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= user.cart.reduce((acc, item) => acc + item.price, 0) + 20 %></h3>
            </div>
            <form action="" class="mt-5">
                <button type="submit" class="w-full py-2 mt-5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-200">Proceed to Checkout</button>
            </form>
        </div>
    </div>
    
    <%- include('./partials/footer') %>

</body>
</html>       
