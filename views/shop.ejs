<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css">

  </head>
  <body class="bg-gray-100">
    <!-- Header with Navigation Links -->
    <header class="bg-white shadow-md">
      <div
        class="container mx-auto flex justify-between items-center py-4 px-4 md:px-8"
      >
        <h1 class="text-3xl font-semibold">Shop.</h1>
        <nav class="flex space-x-6 text-gray-700">
          <a href="/shop" class="hover:text-gray-900">Shop</a>
          <a href="/products" class="hover:text-gray-900">Cart</a>
          <a href="/cart" class="hover:text-gray-900">My Account</a>
          <a href="/users/logout" class="text-red-600">Log out</a>
        </nav>
      </div>
    </header>

    <!-- Success Message -->
    <% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="bg-green-100 text-green-800 p-4 rounded mb-4 text-center">
      <%= success %>
    </div>
    <% } %>

    <!-- Main Shop Layout -->
    <div class="container mx-auto px-4 md:px-8 lg:px-16 py-8">
      <h2 class="text-2xl font-semibold mb-4">Shop Our Products</h2>

      <div class="flex flex-col md:flex-row gap-8">
        <!-- Sidebar -->
        <aside class="w-full md:w-1/4">
          <div class="mb-6">
            <label for="sort" class="block font-semibold text-gray-700 mb-2"
              >Sort by:</label
            >
            <select
              id="sort"
              class="w-full bg-white border border-gray-300 rounded px-3 py-2 text-gray-700"
            >
              <option>Popular</option>
              <option>Price: Low to High</option>
              <option>Price: High to Low</option>
              <option>Newest Arrivals</option>
            </select>
          </div>

          <div class="font-semibold text-gray-700 mb-4">Categories</div>
          <ul class="space-y-2 text-gray-600">
            <li><a href="#" class="hover:text-gray-800">New Collection</a></li>
            <li>
              <a href="#" class="text-gray-800 font-bold">All Products</a>
            </li>
            <li>
              <a href="#" class="hover:text-gray-800">Discounted Products</a>
            </li>
          </ul>

          <div class="font-semibold text-gray-700 mt-6 mb-4">Filter by</div>
          <ul class="space-y-2 text-gray-600">
            <li><a href="#" class="hover:text-gray-800">Availability</a></li>
            <li><a href="#" class="hover:text-gray-800">Discount</a></li>
          </ul>
        </aside>

        <!-- Product Grid -->
        <!-- Product Grid -->
        <!-- Product Grid -->
        <section class="w-full md:w-3/4 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% if (Array.isArray(products) && products.length > 0) { %>
              <% products.forEach(function(product) { %>
                <div class="shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105">
                  <!-- Product Image Section -->
                  <div
                    class="h-52 flex items-center justify-center"
                    style="background-color: <%= product.bgcolor %>;"
                  >
                    <img
                      class="h-32 w-auto object-contain"
                      src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                      alt="<%= product.name %> image"
                    />
                  </div>
          
                  <!-- Product Details Section -->
                  <div
                    class="flex justify-between items-center p-4"
                    style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>;"
                  >
                    <div>
                      <h3 class="text-lg font-semibold"><%= product.name %></h3>
                      <p class="text-sm mt-1">â‚¹ <%= product.price %></p>
                    </div>
                    <a href="/add-to-cart/<%= product._id %>" class="w-8 h-8 flex items-center justify-center rounded-full bg-white shadow-md hover:bg-gray-100">

                        <i class="ri-add-line"></i>
                    </a>
                      
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="col-span-4 text-center text-gray-500">
                No products available.
              </p>
            <% } %>
          </section>
          
          
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
  </body>
</html>
